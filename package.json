{
  "engines": {
  "node": "10.15.1",
  "npm": "6.4.1"
  },

  "devDependencies": {
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.0"
  },
  "scripts": {
    "start": "webpack --watch --mode development",
    "build": "webpack --mode production --config ./webpack.prod.config.js",
